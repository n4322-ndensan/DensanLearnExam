@page "/"
@inject NavigationManager Navigation

<h3>タスク一覧</h3>

<div>
    <RadzenButton class="btn btn-secondary" Click="NavigateToAddTasuku">追加</RadzenButton>
</div>

<div>
    <RadzenDataGrid TItem="BlazorApp.Models.Tasuku" Data="@tasukuList" LoadData="@LoadTasuku">
        <Columns>
            <RadzenDataGridColumn Title="題名">
                <Template Context="tasuku">
                    @tasuku.Title
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Title="期限">
                <Template Context="tasuku">
                    @tasuku.Kigen
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Title="状態">
                <Template Context="tasuku">
                    @StatusCodeToName(tasuku.Status)
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Title="内容">
                <Template Context="tasuku">
                    @tasuku.Naiyo
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
</div>